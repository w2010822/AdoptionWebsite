@model AdoptionWebsite.Models.Animal_FilesViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model._AnimalCate.CateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._AnimalCate.CateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animals.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animals.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animals.Memo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animals.Memo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animals.IsAdoption)
        </dt>
        <dd class="col-sm-10">
            @{
                string isadoption = "未領養";
                if (Model.Animals.IsAdoption == 1) isadoption = "已領養";
            }

            @isadoption
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animals.Sex)
        </dt>
        <dd class="col-sm-10">
            @{
                string Sex = "公";
                if (Model.Animals.Sex == "F") Sex = "母";
            }

            @Sex
        </dd>
        <dt class="col-sm-2">
            <label>圖檔</label>
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model._Files.Count > 0)
                {
                    foreach (var i in Model._Files)
                    {
                        string src = Url.Content("~/" + i.FilePath);
                        <img style="max-height:100px;" src="@src" />
                    }
                }
                else
                {
                    <span>無</span>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Animals.Idno">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
